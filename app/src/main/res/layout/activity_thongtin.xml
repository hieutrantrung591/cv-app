<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".thongtin.ThongTin">


    <Button
        android:id="@+id/btnSaveInfo"
        android:layout_width="114dp"
        android:layout_height="40dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="24dp"
        android:text="Lưu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnHuy"
        android:layout_width="114dp"
        android:layout_height="40dp"
        android:layout_marginStart="50dp"
        android:text="Hủy"
        app:layout_constraintBottom_toBottomOf="@+id/btnSaveInfo"
        app:layout_constraintStart_toStartOf="parent"></Button>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="409dp"
        android:layout_height="656dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="365sp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:gravity="bottom"
                android:text="Họ và tên :"
                android:textColor="#E91E63"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edHoTen"
                android:layout_width="365dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:ems="10"
                android:hint="Nguyễn Văn A"
                android:inputType="textPersonName"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="365dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:gravity="bottom"
                android:text="Công việc mong muốn :"
                android:textColor="#E91E63"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edCongViec"
                android:layout_width="365dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:ems="10"
                android:hint="Nhân viên A/B"
                android:inputType="textPersonName"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="365dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:gravity="bottom"
                android:text="Email : "
                android:textColor="#E91E63"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edEmail"
                android:layout_width="365dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:ems="10"
                android:hint="abc@gmail.com"
                android:inputType="textPersonName"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="365dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:gravity="bottom"
                android:text="Địa chỉ : "
                android:textColor="#E91E63"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edDiaChi"
                android:layout_width="365dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:ems="10"
                android:hint="Số X,Tòa Y,Quận Z,Thành phố A"
                android:inputType="textPersonName"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="365dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:gravity="bottom"
                android:text="Số điện thoại :"
                android:textColor="#E91E63"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edSDT"
                android:layout_width="365dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:ems="10"
                android:hint="XXX-XXXX-XXX"
                android:inputType="textPersonName"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="365dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:gravity="bottom"
                android:text="Ngày/Tháng/Năm Sinh :"
                android:textColor="#E91E63"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edSinhNhat"
                android:layout_width="365dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:ems="10"
                android:hint="DD/MM/YY"
                android:inputType="textPersonName"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="365dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:gravity="bottom"
                android:text="Giới tính :"
                android:textColor="#E91E63"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edGioiTinh"
                android:layout_width="365dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:ems="10"
                android:hint="Nam/Nữ"
                android:inputType="textPersonName"
                android:textSize="20sp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>