<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateInfo">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="85dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:gravity="center"
        android:textColor="#E91E63"
        android:textStyle="bold"
        android:text="Thêm Kinh Nghiệm\nLàm Việc"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>


    <EditText
        android:id="@+id/ed_company"
        android:layout_width="198dp"
        android:layout_height="44dp"
        android:layout_marginStart="184dp"
        android:layout_marginTop="24dp"
        android:textColor="#E91E63"
        android:hint="CTTNHH Phần cao"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"></EditText>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="78dp"
        android:layout_height="27dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="40dp"
        android:textColor="#E91E63"
        android:text="Công ty :"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"></TextView>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="96dp"
        android:layout_height="51dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:text="Vị trí\ncông việc :"
        android:textColor="#E91E63"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"></TextView>

    <EditText
        android:id="@+id/ed_position"
        android:layout_width="198dp"
        android:layout_height="44dp"
        android:layout_marginStart="184dp"
        android:layout_marginTop="24dp"
        android:textColor="#E91E63"
        android:hint="Leader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed_company"></EditText>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="93dp"
        android:layout_height="27dp"
        android:textColor="#E91E63"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:text="Thời gian :"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"></TextView>

    <EditText
        android:id="@+id/ed_date"
        android:layout_width="198dp"
        android:layout_height="44dp"
        android:layout_marginStart="184dp"
        android:layout_marginTop="24dp"
        android:textColor="#E91E63"
        android:textSize="10sp"
        android:hint="15-20/10/2019"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed_position"></EditText>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="152dp"
        android:layout_height="27dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:gravity="left"
        android:text="Mô tả công việc :"
        android:textColor="#E91E63"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"></TextView>

    <Button
        android:id="@+id/btn_save_add"
        android:layout_width="118dp"
        android:layout_height="49dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="50dp"
        android:text="Lưu"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed_describe"></Button>

    <EditText
        android:id="@+id/ed_describe"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        android:textColor="#E91E63"
        android:hint="Hãy ghi những việc bạn đã làm ở trong công ty cũ."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"></EditText>

    <Button
        android:id="@+id/btn_huy"
        android:layout_width="118dp"
        android:layout_height="49dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="50dp"
        android:text="Hủy"
        app:layout_constraintEnd_toStartOf="@+id/btn_save_add"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed_describe" />

</androidx.constraintlayout.widget.ConstraintLayout>